# Jarvis AI Configuration
# Copy this file to .env and fill in your API keys

# ============================================
# AI PROVIDER (Required)
# ============================================

# Groq - Fast inference for Llama, Mixtral, Gemma
GROQ_API_KEY=gsk_your-groq-api-key

# ============================================
# VOICE (Optional - enhances experience)
# ============================================

# Groq Whisper for STT (included with Groq API)
# Browser Web Speech API for TTS (free, no key needed)

# Picovoice - Wake word detection (optional)
PICOVOICE_ACCESS_KEY=your-picovoice-key

# ============================================
# JARVIS SETTINGS
# ============================================

# Server port
PORT=3141

# Wake words (comma-separated)
WAKE_WORDS=jarvis,hey jarvis

# Default AI model (llama-3.3-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it)
DEFAULT_MODEL=llama-3.3-70b-versatile

# Enable debug logging
DEBUG=false
